# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{tmPreferences,sublime-snippet}]
indent_style = tab

[*.sublime-syntax]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
